{% extends 'base.login.html.twig' %}

{% block chjs %}<script src="{{ asset('js/change_backgroundpp.js') }}"></script>{% endblock %}

{% block title %}Reiniciar contraseña{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header text-center">
                    <img src="{{ asset('images/RaXpA_logo.png') }}" alt="RaXpA" width="120" height="auto">
                    <h3>Reiniciar contraseña</h3>
                </div>
                <div class="card-body text-white">
                    {{ form_start(resetForm) }}
                        {{ form_row(resetForm.plainPassword) }}
                        <div class="form-group text-center">
                            <button class="btn login_btn">Reiniciar</button>
                        </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
