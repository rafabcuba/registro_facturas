{% extends 'frontend.html.twig' %}

{% block title %}- Cambiar Contraseña{% endblock %}
{% block article %}

<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card mb-3">
            <div class="card-header text-white bg-dark">
                Cambio de contraseña: <span class="badge text-bg-secondary">{{ app.user.username }}</span>
            </div>
            <div class="card-body">
                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check" aria-hidden="true"></i>  Ok</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}