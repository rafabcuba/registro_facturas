
{% extends 'base.login.html.twig' %}

{% block chjs %}<script src="{{ asset('js/change_background.js') }}"></script>{% endblock %}

{% block title %}Autenticarse{% endblock %}

{% block body %}

<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header text-center">
				<img src="{{ asset('images/RaXpA_logo.png') }}" alt="RBMCert" width="120" height="auto">
				<h3>Ingrese sus credenciales</h3>
			</div>
			<div class="card-body">
				<form method="post">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Usuario" required autofocus>
						
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
                    </div>
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
					<div class="form-group text-center mt-3">
                        <input type="submit" value="Entrar!" class="btn login_btn">
                        
                    </div>
					<div class="text-white mt-2">
						<label class="text-right">
							<a href="{{ path('app_forgot_password_request')}}">Olvidé mi contraseña</a>
						</label>
					</div>
                    
				</form>
            </div>

            {% if error %}
                <div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
		</div>
	</div>
</div>
{% endblock %}
