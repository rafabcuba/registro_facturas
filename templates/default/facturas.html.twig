{% extends 'frontend.html.twig' %}

{% block title %}- Facturas{% endblock %}
{% block article %}

<div class="container-fluid">
    <div class="row mt-3 col-sm">
            <div class="card mb-3">
                <div class="card-header text-white bg-dark">
                    Facturas <span class="badge text-bg-secondary">{{pagination.getTotalItemCount}}</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm table-bordered">
                            <thead class="table-primary">
                                <tr>
                                    <th {% if pagination.isSorted('f.numero') %} class="sorted"{% endif %}>
                                        {{ knp_pagination_sortable(pagination, 'Número', 'f.numero') }}
                                    </th>
                                    <th class="align-text-top">
                                        {{ knp_pagination_sortable(pagination, 'Proveedor', 'f.proveedor') }}
                                    </th>
                                    <th class="align-text-top">
                                        Descripción
                                    </th>
                                    <th class="align-text-top">
                                        {{ knp_pagination_sortable(pagination, 'Importe', 'f.importe') }}
                                    </th>
                                    <th class="align-text-top">
                                        {{ knp_pagination_sortable(pagination, 'Fecha', 'f.fecha') }}
                                    </th>
                                </tr>
                            </thead>
                            {% for factura in pagination %}
                                <tr>
                                    <td>{{ factura.numero }}</td>
                                    <td>{{ factura.proveedor }}</td>
                                    <td>{{ factura.descripcion }}</td>
                                    <td style="text-align: right">{{ factura.importe|number_format(2,'.', '') }}</td>
                                    <td>{{ factura.fecha|date("d/m/Y") }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                    <div class="navigation d-flex justify-content-center">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                    
                </div>
            </div>
    </div>
</div>
{% endblock %}